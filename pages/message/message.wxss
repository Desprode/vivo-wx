/* pages/message/message.wxss */
/*网页背景颜色*/
page{
  background: #f1f1f1;
}
/*区域中内容按列排列*/
.card{
  background-color: #fff;
  border:1rpx solid #ddd;
  border-radius: 10rpx;
  margin:60rpx 20rpx;
   padding:30rpx 30rpx; 
  display: flex;
  flex-direction: column;
}
/*使用弹性布局*/
/*标题*/
.card-title{
  font-size:18px;
  margin-bottom: 20rpx;
}
.card-date{
  font-size:12px;
  border-bottom: 1rpx solid #ddd;
  padding-bottom:20rpx; 
  font-weight: lighter;
}
.card-desc{
  font-size:16px;
  margin-bottom:20rpx;
  color:#333;
}
.card-read{
  font-size:14px;
  border-top: 1rpx solid #ccc;
  padding-top:20rpx;
  color:#666;
}
/*图片 300rpx*/
.card-img{
  width: 100%;
  height: 300rpx;
  margin:20rpx 0; 
}
