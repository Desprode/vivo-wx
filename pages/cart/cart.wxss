/* pages/cart/cart.wxss */
.cart{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mb{
  margin-bottom: 90rpx;
}
.prodimg{
  width: 150rpx;
  height: 150rpx;
  margin-left:-180rpx;
}
.prodinfo{
  display: flex;
  flex-direction: column;
  font-size:14px;
  margin-left:-140rpx;
}
.prodinfo .prodinfo-item{
  padding: 10rpx 0;
}
.delete{
  width: 70rpx;
  height: 70rpx;
}
/*按钮样式*/
.tui-num-group{
  display: table;
  table-layout: fixed;
  width: 200rpx;
  text-align: center;
  border-radius: 10rpx;
  overflow: hidden;
  border:1px solid #bbb;
  margin-left:300rpx;
}
.tui-num-cell{
  display: table-cell;
  line-height: 1.7;
  border-radius: 0;
}
button:after{
  border-bottom:none;
  border-top:none;
  border-radius: 0;
}
/*底部结算样式*/
.cal{
  display: flex;
  position: fixed;
  bottom: 0;
  font-size: 16px;
  padding:10rpx 0;
  margin: 0 40rpx ;
  width:100%;
  background:#fff;
}
/*合计*/
.total{
  margin-left: 40rpx;
  width:300rpx;
}
.price{
  color:red;
  margin-left:20rpx;
}
.gocal{
  margin-left: 60rpx;
  border-radius: 40rpx;
  padding:0 50rpx;
}
